@{
    ViewData["Title"] = "listarSol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<div class="card">
    <div class="card-header">
        Lista de Solicitudes
    </div>
    <div class="card-body">
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Estatus</th>
                    <th>Autorizar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdSolicitud</td>
                        @{
                            switch (@item.EstatuSol)
                            {
                                case 1:
                                    <td>CREADA</td>
                                    break;
                                case 2:
                                    <td>EN APROVACION</td>
                                    break;
                                case 3:
                                    <td>AUTORIZADA</td>
                                    break;

                                case 4:
                                    <td>MODIFICADA</td>
                                    break;
                                case 5:
                                    <td>HISTORICO</td>
                                    break;
                                default:
                                    <td>SIN ASIGNAR</td>
                                    break;
                            }
                        }
                        <td>
                            <a data-toggle="tooltip" data-placement="top" title="Eliminar" asp-action="EditarEstatus" asp-controller="MantenedorSol" class="btn btn-outline-success" asp-route-IdSolicitud="@item.IdSolicitud"><i class="bi bi-check2"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>