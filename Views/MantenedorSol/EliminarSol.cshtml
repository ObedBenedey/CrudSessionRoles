@model SolicitudModel 
@{
    ViewData["Title"] = "EliminarSol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        Elimnar Solicitud
    </div>
    <div class="card-body">
        <form asp-action="EliminarSol" asp-controller="MantenedorSol" method="post">
            <input asp-for="IdSolicitud" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar la requisición : @Html.DisplayTextFor(m => m.IdSolicitud) ?
            </div>
            <button type="submit" class="btn btn-danger">Elimnar</button>
            <a asp-action="ListarSol" asp-controller="MantenedorSol" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>


